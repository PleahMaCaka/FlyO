root = true

[*]
indent_size = 4
indent_style = space
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

ij_any_spaces_within_braces = true
ij_any_spaces_within_brackets = true

[*.{json,css,svelte,yaml,yml}]
indent_size = 2

[*.svelte]
ij_html_space_inside_empty_tag = true